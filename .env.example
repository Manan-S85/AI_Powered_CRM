# AI-Powered CRM Environment Configuration Template
# Copy this file to .env and update with your actual values

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true

# Database Configuration (MongoDB Atlas recommended)
MONGODB_URI=your-mongodb-connection-string-here
DB_NAME=ai_crm_db

# Google Sheets Integration
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=./config/google-service-account.json
GOOGLE_SHEETS_ID=your-google-sheets-id-here
GOOGLE_SHEETS_RANGE=Sheet1!A:Z

# Pipeline Configuration
SYNC_INTERVAL_MINUTES=30
ML_BATCH_SIZE=100
ENABLE_AUTO_SYNC=true
ENABLE_ML_SCORING=true
ENABLE_GOOGLE_SHEETS_SYNC=true
ENABLE_AUTO_LEAD_PROCESSING=true

# Frontend Configuration
CLIENT_URL=http://localhost:3000